                {
                  "key": "data",
                  "value": "{\n  \"name\": \"Maria Santos\",\n  \"country\": \"Philippines\",\n  \"salary\": 600,\n  \"loan\": 5000,\n  \"height\": 160,\n  \"weight\": 55,\n  \"DOB\": \"1990-05-15\",\n  \"Religion\": \"Catholic\",\n  \"maritalStatus\": \"Single\",\n  \"NumChildren\": 0,\n  \"skills\": [\"Cooking\", \"Cleaning\", \"Childcare\"],\n  \"languages\": [\"English\", \"Tagalog\"],\n  \"type\": [\"New/Fresh\"],\n  \"supplier\": \"ABC Agency\",\n  \"isActive\": true,\n  \"isEmployed\": false,\n  \"maidDetails\": {\n    \"englishRating\": 4,\n    \"chineseRating\": 2,\n    \"dialectRating\": 3,\n    \"restDay\": 1,\n    \"highestEducation\": \"High School\",\n    \"description\": \"Experienced maid with excellent references\"\n  }\n}",
                  "type": "text"
                },
                {
                  "key": "image",
                  "type": "file",
