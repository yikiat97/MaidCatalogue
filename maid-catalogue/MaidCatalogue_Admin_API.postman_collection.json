{
  "info": {
    "name": "MaidCatalogue Admin API",
    "description": "Complete API collection for MaidCatalogue Admin endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@easyhire.sg\",\n  \"password\": \"adminSecurePassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "auth", "login"]
            }
          }
        },
        {
          "name": "Admin Auth Callback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/auth/callback",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "auth", "callback"]
            }
          }
        }
      ]
    },
    {
      "name": "Maid Management",
      "item": [
        {
          "name": "Get All Maids (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admin/maids",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maids"]
            }
          }
        },
        {
          "name": "Search Maids (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admin/maids/search?query=maria",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maids", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "maria",
                  "description": "Search by name or ID"
                }
              ]
            }
          }
        },
        {
          "name": "Get Maid by ID (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admin/maids/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maids", "1"]
            }
          }
        },
        {
          "name": "Create New Maid",
          "request": {
            "method": "POST",
            "header": [],
