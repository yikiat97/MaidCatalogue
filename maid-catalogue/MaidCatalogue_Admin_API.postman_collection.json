          }
        },
        {
          "name": "Delete Maid",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/admin/maids/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maids", "1"]
            }
          }
        },
        {
          "name": "Bulk Delete Maids",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"maidIds\": [1, 2, 3, 4, 5]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/maids",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maids"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/admin/users?page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Items per page (default: 10)"
                }
              ]
            }
          }
        },
        {
          "name": "Delete User Recommendation",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/admin/users/123/recommendations/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users", "123", "recommendations", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Recommendation Management",
      "item": [
        {
          "name": "Generate User Recommendation Link",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"maidIds\": [1, 2, 3],\n  \"filters\": {\n    \"country\": \"Philippines\",\n    \"salary\": 600\n  },\n  \"userId\": 123\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/generate-link",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "generate-link"]
            }
          }
        },
        {
          "name": "Toggle Maid Recommendation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recommended\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/maid/1/recommendation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "maid", "1", "recommendation"]
            }
          }
        }
      ]
    }
  ]
